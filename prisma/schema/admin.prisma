model Admin {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String
  role_id    String
  role       Role     @relation(fields: [role_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("admins")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  permissions Json?
  users       Admin[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("roles")
}